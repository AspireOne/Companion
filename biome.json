{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "organizeImports": {
    "enabled": true
  },

  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "./public/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./.git/**/*",
      "./.next/**/*",
      "./android/**/*",
      "./ios/**/*",
      "./out/**/*",
      "./prisma/**/*",
      "package.json"
    ],
    "include": ["./src/**/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noCommentText": "warn",
        "noExplicitAny": "warn"
      },
      "style": {
        "noUnusedTemplateLiteral": "warn",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "nursery": {
        "noUnusedImports": "warn"
      },
      "correctness": {
        "noUnreachable": "off",
        "useExhaustiveDependencies": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  }
}
